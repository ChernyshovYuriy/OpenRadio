<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:id="@+id/remove_station_dialog_root">

    <TextView
        android:id="@+id/remove_station_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remove_station_dialog_main_text"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/remove_station_dialog_cancel_btn_view"
            android:text="@string/cancel_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/remove_station_dialog_add_btn_view"
            android:text="@string/remove_station_dialog_button_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
