<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/dialog_settings_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <CheckBox
        android:id="@+id/settings_dialog_enable_logs_check_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_logs_label" />

    <Button
        android:id="@+id/settings_dialog_send_logs_btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_logs_label" />

    <Button
        android:id="@+id/settings_dialog_clear_logs_btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_logs_label" />

</LinearLayout>