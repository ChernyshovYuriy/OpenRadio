<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/file_dialog_row_bg">

    <ImageView
        android:id="@+id/file_dialog_row_image"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:paddingRight="5dp"
        android:paddingLeft="3dp" />

    <TextView
        android:id="@+id/file_dialog_row_text"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/file_dialog_row_image"
        android:layout_alignTop="@+id/file_dialog_row_image"
        android:layout_toRightOf="@+id/file_dialog_row_image"
        android:gravity="center_vertical"
        android:text="@+id/file_dialog_row_text"
        android:textSize="23sp" />

</RelativeLayout>