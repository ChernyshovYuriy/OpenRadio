<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin"
                tools:context=".view.MainActivity">

    <include
        android:id="@+id/last_played_item_view"
        layout="@layout/category_list_item"/>

    <View
        android:id="@+id/last_played_separator_item_view"
        android:layout_below="@id/last_played_item_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/white"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_below="@id/last_played_separator_item_view"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/no_data_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/no_data_message"
        android:textSize="30sp"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar_view"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_station_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_input_add"/>

</RelativeLayout>
